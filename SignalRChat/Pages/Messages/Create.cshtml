@page
@model SignalRChat.Pages.Messages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-2">User</div>
                <div class="col-4"><input asp-for="Message.User" type="text" id="userInput" class="form-control" /></div>
                <span asp-validation-for="Message.User" class="text-danger"></span>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-6">
                    <textarea id="messagesList" rows="20" cols="80" readonly></textarea>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-1">Message</div>
                <div class="col-7"><input asp-for="Message.Text" type="text" id="messageInput" size="77" class="form-control" /></div>
                <span asp-validation-for="Message.Text" class="text-danger"></span>
                <div class="col-1"><input type="submit" value="Send Message" class="btn btn-primary" /></div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
